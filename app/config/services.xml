<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <service id="validator.unique.entities_exist" class="AppBundle\Validator\Constraints\EntitiesExistValidator">
            <argument type="service" id="doctrine" />
            <tag name="validator.constraint_validator" alias="entities_exist_validator" />
        </service>

	    <service id="app.form.type.tags" class="AppBundle\Form\Type\TagsType">
		    <tag name="form.type" alias="tags" />
		</service>
        
        <service id="app.registration.form.type" class="AppBundle\Form\Type\ProfileFormType">
            <tag name="form.type" alias="user_profile" />
        </service>

    </services>
</container>